{
  "name": "LETS",
  "displayName": "LETS",
  "description": "Orchard Core website with LETS module enabled",
  "author": "Claire Botman",
  "website": "https://zeta.com.au",
  "version": "0.1.0",
  "issetuprecipe": true,
  "categories": [ "community" ],
  "tags": [ "community" ],
  "steps": [
    {
      "name": "feature",
      "disable": [],
      "enable": [
        "LETS",
        "OrchardCore.HomeRoute",
        "OrchardCore.Admin",
        "OrchardCore.Diagnostics",
        "OrchardCore.DynamicCache",
        "OrchardCore.Features",
        "OrchardCore.Navigation",
        "OrchardCore.Recipes",
        "OrchardCore.Resources",
        "OrchardCore.Roles",
        "OrchardCore.Settings",
        "OrchardCore.Themes",
        "OrchardCore.Users",
        "OrchardCore.Alias",
        "OrchardCore.AdminMenu",
        "OrchardCore.Autoroute",
        "OrchardCore.Html",
        "OrchardCore.ContentFields",
        "OrchardCore.ContentPreview",
        "OrchardCore.Contents",
        "OrchardCore.Contents.FileContentDefinition",
        "OrchardCore.ContentTypes",
        "OrchardCore.CustomSettings",
        "OrchardCore.Deployment",
        "OrchardCore.Deployment.Remote",
        "OrchardCore.Feeds",
        "OrchardCore.Flows",
        "OrchardCore.Indexing",
        "OrchardCore.Layers",
        "OrchardCore.Lucene",
        "OrchardCore.Lists",
        "OrchardCore.Liquid",
        "OrchardCore.Markdown",
        "OrchardCore.Media",
        "OrchardCore.Menu",
        "OrchardCore.Queries",
        "OrchardCore.Taxonomies",
        "OrchardCore.Title",
        "OrchardCore.Templates",
        "OrchardCore.Widgets",

        // Themes
        "TheTheme",
        "TheAdmin",
        "SafeMode"
      ]
    },
    {
      "name": "themes",
      "admin": "TheAdmin",
      "site": "TheTheme"
    },
    {
      "name": "settings",
      "HomeRoute": {
        "Action": "Index",
        "Controller": "Home",
        "Area": "TheTheme"
      },
      "LayerSettings": {
        "Zones": [ "Header", "Messages", "Footer" ]
      }
    },
    {
      "name": "ContentDefinition",
      "ContentTypes": [
        {
          "Name": "NoticeType",
          "DisplayName": "Notice Type",
          "Settings": {
            "ContentTypeSettings": {
              "Creatable": true,
              "Listable": true
            },
            "FullTextAspectSettings": {}
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "TitlePart",
              "Name": "TitlePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "0"
                }
              }
            },
            {
              "PartName": "NoticeTypePart",
              "Name": "NoticeTypePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "1"
                }
              }
            },
            {
              "PartName": "AutoroutePart",
              "Name": "AutoroutePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "2"
                },
                "AutoroutePartSettings": {
                  "Pattern": "noticetypes/{{ Model.ContentItem | display_text | slugify }}",
                  "AllowRouteContainedItems": true
                }
              }
            }
          ]
        },
        {
          "Name": "Locality",
          "DisplayName": "Locality",
          "Settings": {
            "ContentTypeSettings": {
              "Creatable": true,
              "Listable": true
            },
            "FullTextAspectSettings": {}
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "TitlePart",
              "Name": "TitlePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "0"
                }
              }
            },
            {
              "PartName": "LocalityPart",
              "Name": "LocalityPart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "1"
                }
              }
            },
            {
              "PartName": "AutoroutePart",
              "Name": "AutoroutePart",
              "Settings": {
                "AutoroutePartSettings": {
                  "Pattern": "localities/{{ ContentItem.DisplayText | slugify }}"
                },
                "ContentTypePartSettings": {
                  "Position": "2"
                }
              }
            }
          ]
        }
      ],
      "ContentParts": [
        {
          "Name": "NoticeTypePart",
          "Settings": {
            "ContentPartSettings": {}
          },
          "ContentPartFieldDefinitionRecords": []
        },
        {
          "Name": "LocalityPart",
          "Settings": {
            "ContentPartSettings": {}
          },
          "ContentPartFieldDefinitionRecords": []
        }
      ]
    },
    {
      "name": "content",
      "data": [
        {
          "ContentItemId": "[js: uuid()]",
          "ContentType": "Locality",
          "DisplayText": "First locality",
          "Latest": true,
          "Published": true,
          "Owner": "[js: parameters('AdminUsername')]",
          "Author": "[js: parameters('AdminUsername')]",
          "TitlePart": {
            "Title": "First locality"
          },
          "LocalityPart": {
            "Postcode": "6000"
          },
          "AutoroutePart": {
            "Path": "localities/first-locality",
            "SetHomepage": false,
            "Disabled": false,
            "RouteContainedItems": false,
            "Absolute": false
          }
        },
        {
          "ContentItemId": "[js: uuid()]",
          "ContentType": "NoticeType",
          "DisplayText": "Offer",
          "Latest": true,
          "Published": true,
          "Owner": "[js: parameters('AdminUsername')]",
          "Author": "[js: parameters('AdminUsername')]",
          "TitlePart": {
            "Title": "Offer"
          },
          "NoticeTypePart": {
            "RequiredCount": 1,
            "SortOrder": 1
          },
          "AutoroutePart": {
            "Path": "noticetypes/offer",
            "SetHomepage": false,
            "Disabled": false,
            "RouteContainedItems": false,
            "Absolute": false
          }
        },
        {
          "ContentItemId": "[js: uuid()]",
          "ContentType": "NoticeType",
          "DisplayText": "Request",
          "Latest": true,
          "Published": true,
          "Owner": "[js: parameters('AdminUsername')]",
          "Author": "[js: parameters('AdminUsername')]",
          "TitlePart": {
            "Title": "Request"
          },
          "NoticeTypePart": {
            "RequiredCount": 0,
            "SortOrder": 2
          },
          "AutoroutePart": {
            "Path": "noticetypes/request",
            "SetHomepage": false,
            "Disabled": false,
            "RouteContainedItems": false,
            "Absolute": false
          }
        },
        {
          "ContentItemId": "[js: uuid()]",
          "ContentType": "NoticeType",
          "DisplayText": "Announcement",
          "Latest": true,
          "Published": true,
          "Owner": "[js: parameters('AdminUsername')]",
          "Author": "[js: parameters('AdminUsername')]",
          "TitlePart": {
            "Title": "Announcement"
          },
          "NoticeTypePart": {
            "RequiredCount": 0,
            "SortOrder": 3
          },
          "AutoroutePart": {
            "Path": "noticetypes/announcement",
            "SetHomepage": false,
            "Disabled": false,
            "RouteContainedItems": false,
            "Absolute": false
          }
        }
      ]
    },
    {
      "name": "layers",
      "Layers": [
        {
          "Name": "Always",
          "Rule": "true",
          "Description": "The widgets in this layer are displayed on any page of this site."
        },
        {
          "Name": "Homepage",
          "Rule": "isHomepage()",
          "Description": "The widgets in this layer are only displayed on the homepage."
        }
      ]
    }
  ]
}
